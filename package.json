{
  "name": "autoreload-package-service",
  "description": "a reloader for atom packages",
  "version": "0.0.4",
  "homepage": "https://github.com/paulpflug/",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "repository": "https://github.com/paulpflug/autoreload-package-service",
  "engines": {
    "atom": ">=0.174.0 <2.0.0"
  },
  "main": "lib/autoreload-package-service",
  "keywords": ["atom", "package", "reloader"],
  "readmeFilename": "README.md",
  "dependencies": {
    "chokidar": "^1.7.0"
  },
  "providedServices": {
    "autoreload": {
      "description": "autoreload in dev-mode",
      "versions": {
        "0.0.1": "provideAutoreload"
      }
    }
  },
  "consumedServices": {
    "debug": {
      "versions": {
        "^0.0.1": "consumeDebug"
      }
    }
  },
  "configSchema": {
    "_packages": {
      "title": "Packages",
      "description": "The names of packages that will be auto-reloaded in dev mode, same as the `name` of your `package.json`.",
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "files": {
      "description": "The top level files that will be watched for each package listed above, in addition to `package.json`.",
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "folders": {
      "description": "The top level folders that will be watched for each package listed above, in addition to `lib`.",
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    }
  }
}
